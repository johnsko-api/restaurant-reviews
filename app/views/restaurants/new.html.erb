<h1>Restaurants</h1>

<%= form_for :restaurant, url: restaurants_path do |f| %>
<p>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :address %><br>
  <%= f.text_field :address %>
</p>

<p>
  <%= f.label :city %><br>
  <%= f.text_field :city %>
</p>

<p>
  <%= f.label :state %><br>
  <%= f.text_field :state %>
</p>

<p>
  <%= f.label :zipcode %><br>
  <%= f.text_field :zipcode %>
</p>

<p>
  <%= f.label :category %><br>
  <%= f.text_field :category %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
